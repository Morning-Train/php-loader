{
    "name": "morningtrain/php-loader",
    "description": "A class for loading PHP files and classes in a PSR-4 directory",
    "keywords": [
        "morningtrain",
        "loader"
    ],
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Mathias Munk",
            "email": "mh@morningtrain.dk"
        }
    ],
    "autoload": {
        "psr-4": {
            "Morningtrain\\PHPLoader\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Morningtrain\\PHPLoader\\Tests\\Unit\\": "tests/Unit",
            "Morningtrain\\PHPLoader\\Tests\\Feature\\": "tests/Feature"
        }
    },
    "require": {
        "php": "^8.0",
        "symfony/finder": "^6"
    },
    "require-dev": {
        "pestphp/pest": "^1.20"
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "prefer-stable": true
}
